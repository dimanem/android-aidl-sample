<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="simplelauncher.arnab.ch.aidlserver">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.dima.sample.aidl.server.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.dima.sample.aidl.server.MyService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="simplelauncher.arnab.ch.aidlserver.STRING_GEN" />
            </intent-filter>
        </service>

    </application>

</manifest>